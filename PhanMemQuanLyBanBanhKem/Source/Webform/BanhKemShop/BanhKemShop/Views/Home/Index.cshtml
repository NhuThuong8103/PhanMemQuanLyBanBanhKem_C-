<section class="home-2">
    <div class="container">
        <div class="heading">
            <div class="main-title">
                <h2>SẢN PHẨM NỔI BẬT</h2>
            </div>
            <div class="main-tab">
                <div class="showed">Sản phẩm nổi bật</div>
                <div class="main-nav">
                    <div class="item active" data-tab="1">Sản phẩm nổi bật</div>
                    <div class="item" data-tab="2">Sản phẩm hot</div>
                    <div class="item" data-tab="3">Sản phẩm mới</div>
                    <div class="item" data-tab="4">Sản phẩm bán chạy</div>
                </div>
            </div>
        </div>
        <div class="main-content">
            <div class="content-item active" data-content="1">
                <div class="row">
                    @foreach (var item in ViewBag.DSBanhNoiBat)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 item">
                            <figure>
                                <div class="image">
                                    <a href="/chi-tiet-san-pham-@item.maBanhKem -@item.maLoai">
                                    @{
                                        string base64String = Convert.ToBase64String(webservice.Intance.get_imageFile(item.hinhAnhBanhKem));
                                    }
                                        <img src="@String.Format("data:image/png;base64,{0}", base64String)" alt="">
                                    </a>
                                    <div class="action"><a href="/chi-tiet-san-pham-@item.maBanhKem -@item.maLoai"><em class="mdi mdi mdi-magnify-plus-outline"></em></a>
                                    <a href="/them-gio-hang?productID=@item.maSizeBanh"><em class="mdi mdi-shopping"></em></a></div>
                                </div>
                                <figcaption>
                                    <a href="/chi-tiet-san-pham-@item.maBanhKem -@item.maLoai">
                                        <h5>@item.tenBanhKem</h5>
                                    </a>
                                    <div class="star"><em class="far fa-star"></em><em class="far fa-star"></em><em class="far fa-star"></em><em class="far fa-star"></em><em class="far fa-star"></em></div>
                                    <div class="price">
                                        @if (item.giamGia > 0)
                                        { //this.gia - ((double)(this.gia * Int32.Parse(this.giamgia)) / 100))
                                            <div class="new">@(item.gia-((double)(item.gia * item.giamGia) / 100)) ₫</div>
                                            <div class="old">@item.gia ₫</div>
                                        }
                                        else{ 
                                            <div class="new">>@item.gia ₫</div>
                                        }
                                        
                                    </div>
                                    @if (item.giamGia > 0) { 
                                        <div class="sale">Sale</div>
                                    }
                                </figcaption>
                            </figure>
                        </div>
                    }
                </div>
            </div>
            <div class="content-item" data-content="2">
                <div class="row">
                    @foreach (var item in ViewBag.DSBanhNoiBat)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 item">
                            <figure>
                                <div class="image">
                                    <a href="/chi-tiet-san-pham-@item.maBanhKem -@item.maLoai">
                                        @{
                                            string base64String = Convert.ToBase64String(webservice.Intance.get_imageFile(item.hinhAnhBanhKem));
                                        }
                                        <img src="@String.Format("data:image/png;base64,{0}", base64String)" alt="">
                                    </a>
                                    <div class="action"><a href="/chi-tiet-san-pham-@item.maBanhKem -@item.maLoai"><em class="mdi mdi mdi-magnify-plus-outline"></em></a><a href="/them-gio-hang?productID=@item.maSizeBanh"><em class="mdi mdi-shopping"></em></a></div>
                                </div>
                                <figcaption>
                                    <a href="/chi-tiet-san-pham-@item.maBanhKem -@item.maLoai">
                                        <h5>@item.tenBanhKem</h5>
                                    </a>
                                    <div class="star"><em class="far fa-star"></em><em class="far fa-star"></em><em class="far fa-star"></em><em class="far fa-star"></em><em class="far fa-star"></em></div>
                                    <div class="price">
